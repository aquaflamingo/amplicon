<h1> Edit Account </h2>
<section class="mt-2 mb-2" id="profile">
  <h2> Profile </h3>
  <%= form_with model: @user do |form| %>

    <div class="form-group mb-5">
      <small id="username_help" class="form-text text-muted">Enter your new username</small>
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">@</span>
        </div>
        <%= form.text_field :username, class: 'form-control', placeholder: "Username", aria_label: "Username", aria_describedby: "addon"%>
      </div>
    </div>

      <div data-controller="image-preview">
        <%= image_tag(@user.avatar.variant(resize: "300x300"), height: 150, width: 150, class: "rounded", data: { target: "image-preview.output" }) if @user.avatar.attached? %>
      </div>

      <div class="form-group">
        <div class="input-group">
          <%= form.file_field :avatar, 
            class: "custome-file-input",
            data: { target: "image-preview.input", action: "image-preview#readURL" } %>
        </div>
      </div>

    <div class="submit-field">
      <%= form.submit "Save", class: "btn btn-success"%>
    </div>
  <% end %>
</section>

<section class="mt-2 mb-2" id="security">
  <h2> Security </h2>
  <%= link_to "Change Password", new_password_path %>
</section>

