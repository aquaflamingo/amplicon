<h1> Edit Account </h2>
<section class="mt-2 mb-2" id="profile">
<h2> Profile </h3>
<%= form_with model: @user do |form| %>
  <div class="form-group">
    <%= form.label :username %>
    <%= form.text_field :username, class: 'form-control' %>
    <small id="username_help" class="form-text text-muted">Enter your new username</small>
  </div>

  <div data-controller="image-preview">
    <%= image_tag(@user.avatar.variant(resize: "100x100"), height: 75, width: 75, class: "rounded", data: { target: "image-preview.output" }) if @user.avatar.attached? %>
  
    <div class="form-group">
      <%= form.file_field :avatar, 
        data: { target: "image-preview.input", action: "image-preview#readURL" } %>
    </div>

  <div class="submit-field">
    <%= form.submit "Save", class: "btn btn-success"%>
  </div>
<% end %>
</section>

<section class="mt-2 mb-2" id="security">
  <h2> Security </h3>
  <%= link_to "Change Password", new_password_path %>
</section>

