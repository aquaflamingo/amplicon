<!-- Col 3 -->
<div class="container"> 
  <div class="row gx-4">
    <div class="col-lg-3">
      <div class="content justify-content-center p-2">
        <div class="row mb-2">
          <%= image_tag user_avatar(@user, 300), class: "rounded-circle" %>
        </div> 

        <div class="row">
          <div class="user-content">
            <h5>@<%= @user.username %></h5>
            <h3><%= @user.display_name %></h3>
            <p> <%= @user.description %> </p>

            <%= render partial: "/users/user_statistics", object: @user %>
          </div>
        </div>

        <div class="row">
          <% if is_current_user?(@user) %>
            <%= link_to "Edit Account", edit_user_path(@user), class: 'btn btn-primary' %>
          <% else %>
            <%= render partial: '/users/follow_form', object: @user %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-9">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Protocols</a>
        </li>
        <li class="nav-item">
          <%= link_to "Followers", followers_user_path(@user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Following", following_user_path(@user), class: "nav-link" %>
        </li>
      </ul>

      <!-- TODO tab-able -->
      <div class="row p-4">
        <% @user_protocols.each do |p| %>
          <div class="row pt-2">
            <%= render partial: "/protocols/card", locals: { protocol: p } %>
          </div> 
        <% end%>
      </div>
    </div>
  </div>
</div>
